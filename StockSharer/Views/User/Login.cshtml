@using System.Web.Optimization
@model StockSharer.Controllers.SearchResultsViewModel
<div class="page-content-holder">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-offset-3 col-sm-6">
                <div class="page-content login-holder">
                    <h1 class="text-center">Sign in to StockSharer</h1>
                    <h2 class="text-center">Enter your email and password</h2>
                    <form method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-default btn-block main-cta-btn main-cta-btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles
{
    @Styles.Render("~/bundles/styles/user")
}