@using System.Web.Optimization
@model StockSharer.Web.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register an account";
}
<div class="page-content-holder">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-offset-3 col-sm-6">
                <div class="page-content login-holder">
                    <h1 class="text-center">Register an account</h1>
                    <h2 class="text-center">Simply enter your name, email address and password</h2>
                    <form method="POST" action="/user/ActivateAccount" data-toggle="validator">
                        @Html.AntiForgeryToken()
                        <div class="alert alert-warning" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Warning:</span>
                            It appears as though the link you used has expired.  Please re-enter your email address below and we will send out an activation email
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="Email" placeholder="Email" value="@Model.Email" required data-error="Please enter a valid email">
                            <div class="help-block with-errors"></div>
                        </div>
                        <button type="submit" class="btn btn-default btn-block main-cta-btn main-cta-btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles
{
    @Styles.Render("~/bundles/styles/user")
}