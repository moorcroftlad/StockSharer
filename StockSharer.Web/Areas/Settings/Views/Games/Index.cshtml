@using StockSharer.Web.Areas.Settings.ViewModels
@model MyGamesViewModel
@{
    ViewBag.Title = "My games";
}

<div class="page-content-holder">
    <div class="container">
        <div class="page-content">
            <div class="row">
                <div class="col-sm-4 col-md-3">
                    @Html.Partial("_Sidebar", new AccountSidebarViewModel{Page = "Games"})
                </div>
                <div class="col-sm-8 col-md-9">
                    <div class="settings-main">
                        <h1>Games</h1>
                        <h2>Manage your games catalogue</h2>
                        <hr/>
                        
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>&nbsp;</th>
                                        <th>Game</th>
                                        <th>Platform</th>
                                        <th>Date added</th>
                                        <th>Current status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var game in Model.MyGames)
                                    {
                                        <tr>
                                            <td><img src="@game.HostedImageUrl" width="50" height="63"/></td>
                                            <td>@game.GameName</td>
                                            <td>@game.PlatformName</td>
                                            <td>@game.DateAdded.ToString("dd MMMM yyyy")</td>
                                            <td>@game.AvailabilityName</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="5"><a href="#" data-toggle="modal" data-target="#addGameModal">Add game</a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="addGameModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <input type="hidden" name="gameId" value=""/>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Search for a game and click save changes</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="gameSearch">Search for a game</label>
                        <input id="gameSearch" type="search" class="form-control" >
                    </div>
                    <div style="height:400px; overflow: scroll; overflow-x: hidden;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>&nbsp;</th>
                                    <th>Game</th>
                                    <th>Platform</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var game in Model.Games)
                                {
                                    <tr>
                                        <td><img src="@game.HostedImageUrl" width="50" height="63"/></td>
                                        <td>@game.GameName</td>
                                        <td>@game.PlatformName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section styles
{
    @Styles.Render("~/bundles/styles/settings")
}